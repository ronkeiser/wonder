{
  "name": "wflow-vscode",
  "displayName": "Wonder Workflow DSL",
  "description": "Language support for .wflow workflow definitions",
  "version": "0.0.1",
  "publisher": "wonder",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "wflow",
        "aliases": [
          "Wonder Workflow",
          "wflow"
        ],
        "extensions": [
          ".wflow"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "wtask",
        "aliases": [
          "Wonder Task",
          "wtask"
        ],
        "extensions": [
          ".task"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "waction",
        "aliases": [
          "Wonder Action",
          "waction"
        ],
        "extensions": [
          ".action"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "wflow",
        "scopeName": "source.wflow",
        "path": "./syntaxes/wflow.tmLanguage.json"
      },
      {
        "language": "wtask",
        "scopeName": "source.wtask",
        "path": "./syntaxes/wtask.tmLanguage.json"
      },
      {
        "language": "waction",
        "scopeName": "source.waction",
        "path": "./syntaxes/waction.tmLanguage.json"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "wflow",
        "scopes": {
          "function": [
            "entity.name.function.node.wflow"
          ],
          "function.declaration": [
            "entity.name.function.node.wflow"
          ],
          "class": [
            "entity.name.class.transition.wflow"
          ],
          "class.declaration": [
            "entity.name.class.transition.wflow"
          ]
        }
      },
      {
        "language": "wtask",
        "scopes": {
          "function": [
            "entity.name.function.step.wtask"
          ],
          "function.declaration": [
            "entity.name.function.step.wtask"
          ]
        }
      },
      {
        "language": "waction",
        "scopes": {
          "function": [
            "entity.name.function.action.waction"
          ],
          "function.declaration": [
            "entity.name.function.action.waction"
          ]
        }
      }
    ]
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "vscode:prepublish": "pnpm run build"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3"
  }
}
