{
  "name": "@wonder/resources",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "exports": {
    "./types": {
      "types": "./dist/types.d.ts",
      "default": "./src/types.ts"
    },
    "./schemas": {
      "types": "./dist/schema/index.d.ts",
      "default": "./src/schema/index.ts"
    }
  },
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply wonder --local",
    "db:migrate:remote": "wrangler d1 migrations apply wonder --remote",
    "db:studio": "drizzle-kit studio",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@wonder/events": "workspace:*",
    "@wonder/logs": "workspace:*",
    "@wonder/schemas": "workspace:*",
    "drizzle-orm": "^0.44.7",
    "ulid": "^3.0.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.11",
    "@types/node": "^24.10.1",
    "@vitest/ui": "^3.2.4",
    "drizzle-kit": "^0.31.7",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.50.0"
  }
}
