{
  "$schema": "./node_modules/wrangler/config-schema.json",
  "name": "wonder-executor",
  "main": "src/index.ts",
  "compatibility_date": "2025-12-01",
  "workers_dev": false,
  "preview_urls": false,
  "ai": {
    "binding": "AI",
  },
  "services": [
    { "binding": "LOGS", "service": "wonder-logs" },
    { "binding": "EVENTS", "service": "wonder-events" },
    { "binding": "RESOURCES", "service": "wonder-resources" },
  ],
  "durable_objects": {
    "bindings": [
      {
        "name": "COORDINATOR",
        "class_name": "WorkflowCoordinator",
        "script_name": "wonder-coordinator",
      },
      {
        "name": "STREAMER",
        "class_name": "Streamer",
        "script_name": "wonder-events",
      },
      {
        "name": "AGENT",
        "class_name": "Conversation",
        "script_name": "wonder-agent",
      },
    ],
  },
  "observability": {
    "enabled": false,
  },
  "vars": {
    "SERVICE": "executor",
    "ENVIRONMENT": "development",
    "TRACE_EVENTS_ENABLED": "true",
  },
}
