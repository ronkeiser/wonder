{
  "name": "@wonder/logs",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types.ts"
  },
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "types": "wrangler types -c wrangler.jsonc",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply wonder-logs --local",
    "db:migrate:remote": "wrangler d1 migrations apply wonder-logs --remote",
    "db:studio": "drizzle-kit studio",
    "test": "vitest"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.7",
    "ulid": "^3.0.2"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.11",
    "drizzle-kit": "^0.31.7",
    "typescript": "^5.9.3",
    "wrangler": "^4.51.0"
  }
}
