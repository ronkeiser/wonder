{
  "name": "@wonder/events",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "types": "wrangler types -c wrangler.jsonc",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply wonder-events --local",
    "db:migrate:remote": "wrangler d1 migrations apply wonder-events --remote",
    "db:studio": "drizzle-kit studio",
    "test": "vitest"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.7",
    "ulid": "^3.0.2"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.11",
    "drizzle-kit": "^0.31.7",
    "typescript": "^5.9.3",
    "wrangler": "^4.51.0"
  }
}
