{
  "name": "wonderful",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "types": "pnpm run --parallel --filter \"./services/*\" types",
    "typecheck": "pnpm run --parallel --filter \"./services/*\" typecheck",
    "deploy": "pnpm -r --filter './services/*' --workspace-concurrency 1 deploy"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "pnpm": {
    "overrides": {
      "@vitest/runner": "~3.2.4",
      "@vitest/snapshot": "~3.2.4",
      "@vitest/utils": "~3.2.4",
      "@vitest/pretty-format": "~3.2.4"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "workerd"
    ]
  },
  "devDependencies": {
    "prettier": "^3.7.4"
  }
}
