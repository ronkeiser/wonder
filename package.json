{
  "name": "wonderful",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "deploy:agent": "pnpm --filter @wonder/agent run deploy",
    "deploy:all": "pnpm -r --filter './services/*' --workspace-concurrency 1 deploy",
    "deploy:coordinator": "pnpm --filter @wonder/coordinator run deploy",
    "deploy:events": "pnpm --filter @wonder/events run deploy",
    "deploy:executor": "pnpm --filter @wonder/executor run deploy",
    "deploy:http": "pnpm --filter @wonder/http run deploy",
    "deploy:logs": "pnpm --filter @wonder/logs run deploy",
    "deploy:resources": "pnpm --filter @wonder/resources run deploy",
    "deploy:web": "pnpm --filter web run deploy",
    "dev": "pnpm --filter web run dev",
    "gen:sdk": "pnpm --filter @wonder/sdk run generate",
    "gen:tasks": "pnpm --filter @wonder/scripts run gen:tasks",
    "test:all": "vitest run --config packages/tests/vitest.config.ts",
    "test:conversations": "pnpm --filter @wonder/scripts run test:conversations",
    "test:models": "pnpm --filter @wonder/scripts run test:models",
    "test:workflows": "pnpm --filter @wonder/scripts run test:workflows",
    "typecheck": "pnpm run --parallel --filter \"./services/*\" typecheck",
    "types": "pnpm --filter @wonder/scripts run gen:types"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "pnpm": {
    "overrides": {
      "@vitest/runner": "~3.2.4",
      "@vitest/snapshot": "~3.2.4",
      "@vitest/utils": "~3.2.4",
      "@vitest/pretty-format": "~3.2.4"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "workerd"
    ]
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "tsx": "^4.20.6"
  }
}
